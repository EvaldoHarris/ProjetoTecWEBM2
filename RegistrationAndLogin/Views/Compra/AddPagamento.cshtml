@model IEnumerable<RegistrationAndLogin.Models.Pagamento>

@{
    ViewBag.Title = "AddPagamento";
}

<h2>AddPagamento</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Adicionar", "ConfirmAddPagamento", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
