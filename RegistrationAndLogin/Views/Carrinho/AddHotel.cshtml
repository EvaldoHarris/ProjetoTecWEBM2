@model IEnumerable<RegistrationAndLogin.Models.Hotel>

<h2>Escola o Hotel</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diaria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estrelas)
        </th>
